<div class="container">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h1 class="form-signin-heading">Sign up</h1>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true , :class => "form-control" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<div class="center">
<%= render "devise/shared/links" %>
</div>
</div>
